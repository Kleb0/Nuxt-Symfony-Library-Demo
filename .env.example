# =============================================================================
# Nuxt-Symfony-Library - Variables d'environnement (EXEMPLE)
# Copiez ce fichier vers .env et configurez vos valeurs
# =============================================================================

# =============================================================================
# SYMFONY BACKEND CONFIGURATION
# =============================================================================

# Application
APP_ENV=dev
APP_SECRET=changeme-your-secret-key-here

# Base de données XAMPP (MariaDB)
DATABASE_URL="mysql://root:@127.0.0.1:3306/nuxt-symfony-db?serverVersion=mariadb-10.4&charset=utf8mb4"
# Alternative PostgreSQL: DATABASE_URL="postgresql://username:password@127.0.0.1:5432/nuxt-symfony-db?serverVersion=16&charset=utf8"

# Mailer (optionnel)
MAILER_DSN=smtp://localhost:1025

# Redis (optionnel pour le cache)
REDIS_URL=redis://localhost:6379

# =============================================================================
# JWT AUTHENTICATION (si utilisé)
# =============================================================================

JWT_SECRET_KEY=%kernel.project_dir%/config/jwt/private.pem
JWT_PUBLIC_KEY=%kernel.project_dir%/config/jwt/public.pem
JWT_PASSPHRASE=your-jwt-passphrase

# =============================================================================
# SERVICES TIERS
# =============================================================================

# API Keys externes (exemple pour services automobiles)
# AUTOMOTIVE_API_KEY=your-api-key-here
# INSURANCE_API_KEY=your-insurance-api-key

# Upload et stockage
# AWS_S3_BUCKET=your-bucket-name
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# =============================================================================
# NUXT.JS FRONTEND CONFIGURATION
# =============================================================================

# URL de l'API backend
NUXT_PUBLIC_API_BASE_URL=http://localhost:8000/api

# Configuration publique
NUXT_PUBLIC_APP_NAME="Nuxt-Symfony-Library"
NUXT_PUBLIC_APP_VERSION="1.0.0"

# Services externes (côté client)
# NUXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-key
# NUXT_PUBLIC_ANALYTICS_ID=your-analytics-id

# =============================================================================
# DÉVELOPPEMENT LOCAL
# =============================================================================

# Ports
FRONTEND_PORT=3000
BACKEND_PORT=8000

# Mode debug
DEBUG=true

# =============================================================================
# SÉCURITÉ
# =============================================================================

# CORS Origins 
CORS_ALLOW_ORIGIN="http://localhost:3000,https://your-domain.com"

# Session et cookies
SESSION_LIFETIME=3600
COOKIE_SECURE=false

# =============================================================================
# INSTRUCTIONS
# =============================================================================

# 1. Copiez ce fichier: cp .env.example .env
# 2. Modifiez les valeurs selon votre environnement
# 3. Ne commitez JAMAIS le fichier .env
# 4. Utilisez des valeurs sécurisées en production