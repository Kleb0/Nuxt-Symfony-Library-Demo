# =============================================================================
# Nuxt-Symfony-Library - Variables d'environnement
# Configuration pour le développement local avec XAMPP/MariaDB
# =============================================================================

# =============================================================================
# SYMFONY BACKEND CONFIGURATION
# =============================================================================

# Application
APP_ENV=dev
APP_SECRET=9da1f27fdeb9627622d7a629a6e08a17

# Base de données XAMPP (MariaDB)
DATABASE_URL="mysql://root:@127.0.0.1:3306/nuxt_symfony_db?serverVersion=mariadb-10.4.32&charset=utf8mb4"

# URL par défaut pour les commandes CLI Symfony
DEFAULT_URI="http://localhost:8000"

# CORS Configuration
CORS_ALLOW_ORIGIN="http://localhost:3000"

# =============================================================================
# NUXT.JS FRONTEND CONFIGURATION
# =============================================================================

# URL de l'API backend
NUXT_PUBLIC_API_BASE_URL=http://localhost:8000/api

# Configuration publique
NUXT_PUBLIC_APP_NAME="Nuxt-Symfony-Library"
NUXT_PUBLIC_APP_VERSION="1.0.0"

# =============================================================================
# DÉVELOPPEMENT LOCAL
# =============================================================================

# Ports
FRONTEND_PORT=3000
BACKEND_PORT=8000

# Mode debug
DEBUG=true

# =============================================================================
# INSTRUCTIONS D'UTILISATION
# =============================================================================

# 1. Assurez-vous que XAMPP est démarré avec MariaDB/MySQL
# 2. Créez la base de données : php bin/console doctrine:database:create
# 3. Importez les données : mysql -u root -p nuxt_symfony_db < backend/nuxt_symfony_db.sql
# 4. Démarrez le backend : php -S localhost:8000 -t public/
# 5. Démarrez le frontend : npm run dev